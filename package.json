{
  "name": "spaceapp",
  "version": "1.0.307",
  "description": "Electron App with Modern UI",
  "author": "Charles Sampaio",
  "main": "src/main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/CharlesSampaio-CRS/spacehub.git"
  },
  "scripts": {
    "bump-version": "node scripts/bump-version.js",
    "prestart": "node scripts/generate-config.js",
    "prebuild": "npm run bump-version && node scripts/generate-config.js",
    "start": "electron .",
    "build": "npm run prebuild && electron-builder --win --linux",
    "dist": "electron-builder",
    "build:win": "npm run prebuild && electron-builder --win",
    "build:mac": "npm run prebuild && electron-builder --mac",
    "build:linux": "npm run prebuild && electron-builder --linux",
    "release": "npm run bump-version && node scripts/generate-config.js && git add package.json && git commit -m \"release: bump version\" && git tag v$(node -p \"require('./package.json').version\") && git push && git push --tags && npx electron-builder --publish always"
  },
  "devDependencies": {
    "electron": "^25.9.8",
    "electron-builder": "^25.1.8"
  },
  "dependencies": {
    "axios": "^1.8.4",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.4.7",
    "electron-store": "^7.0.3",
    "electron-updater": "^6.6.2",
    "googleapis": "^148.0.0",
    "node-fetch": "^2.7.0",
    "sweetalert2": "^11.6.13"
  },
  "build": {
    "appId": "com.spacehub.app",
    "productName": "SpaceHub",
    "publish": {
      "provider": "github",
      "owner": "CharlesSampaio-CRS",
      "repo": "spacehub"
    },
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "pages/**/*",
      "assets/**/*",
      "scripts/**/*",
      "node_modules/**/*",
      "main.js",
      "config.js",
      ".env",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "src/assets",
        "to": "assets"
      }
    ],
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "src/assets/spacehub.icns",
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "artifactName": "SpaceHub-${version}.${ext}",
      "icon": "src/assets/spacehub.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "artifactName": "SpaceHub-${version}.${ext}",
      "icon": "src/assets/spacehub.png",
      "category": "Utility",
      "maintainer": "ccharlesroberto@gmail.com"
    }
  }
}